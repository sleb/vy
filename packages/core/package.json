{
  "name": "@repo/core",
  "version": "0.0.1",
  "description": "Core types package for Vy",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
