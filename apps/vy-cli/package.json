{
  "name": "@repo/vy-cli",
  "version": "0.0.1",
  "description": "Vy - AI-powered semantic memory CLI",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "vy": "./dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --dts --format esm",
    "dev": "tsup src/index.ts src/cli.ts --dts --format esm --watch",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "prompts": "^2.4.2",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@repo/core": "*",
    "@repo/eslint-config": "*",
    "@repo/mcp-server-basic": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^24.3.0",
    "@types/prompts": "^2.4.9",
    "eslint": "^9.34.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
